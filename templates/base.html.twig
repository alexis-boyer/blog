<!DOCTYPE html>

<style media="screen">
  .centered {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  }
  .large{
    font-size: 8vw;
  }
  .normal{
    font-size: 2vw;
  }
  .title{
    font-size: 5vw;
  }
  .map-container{
    overflow:hidden;
    text-align: center;
    padding-bottom:56.25%;
    position:relative;
    height:0;
  }
  .map-container iframe{
    height:80%;
    width:75%;
    position: absolute;
  }

  .active-link {
    border-bottom: 2px solid #FB7D09;
    padding-bottom: 5px;
  }
</style>

{% set currentPath = path(app.request.attributes.get('_route'),
                       app.request.attributes.get('_route_params')) %}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<!-- BLOCK : navbar -->
<nav class="navbar navbar-expand-md navbar-light fixed-top bg-light shadow-lg" style="opacity: 0.9;">
  <a class="navbar-brand" href="{{path("index")}}">
    <img src="{{asset('img/logo-maitreartisan.png')}}" width="75" height="50" alt="">
  </a>
  <ul class="navbar-nav mr-auto">
    <li class="nav-item ">
      <a class="nav-link font-weight-bold text-uppercase navbar-text px-4
      {% if currentPath == path('contact') %}active-link{% endif %}" style="
      font-family:Montserrat,Arial,Helvetica,sans-serif;
      {% if currentPath == path('contact') %}color: #096007;{% endif %}" href="{{path("contact")}}">Contact </a>
    </li>
    <li class="nav-item dropdown">
      <a class="nav-link font-weight-bold text-uppercase navbar-text px-4
      {% if currentPath == path('galerieCharpente') %}active-link{% endif %}
      {% if currentPath == path('galerieCouverture') %}active-link{% endif %}
      {% if currentPath == path('galerieEouvre') %}active-link{% endif %}
      " id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
      style="
      {% if currentPath == path('galerieCharpente') %}color: #096007;{% endif %}
      {% if currentPath == path('galerieCouverture') %}color: #096007;{% endif %}
      {% if currentPath == path('galerieEouvre') %}color: #096007;{% endif %}">
          Galerie
      </a>
      <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item font-weight-bold navbar-text px-4" href="{{path("galerieCharpente")}}">Charpente</a>
          <a class="dropdown-item font-weight-bold navbar-text px-4" href="{{path("galerieCouverture")}}">Couverture</a>
          <a class="dropdown-item font-weight-bold navbar-text px-4" href="{{path("galerieEouvre")}}">Eouvre</a>
      </div>
    </li>
    <li class="nav-item">
      <a class="nav-link font-weight-bold text-uppercase navbar-text px-4
      {% if currentPath == path('apropos') %}active-link{% endif %}" style="font-family:Montserrat,Arial,Helvetica,sans-serif;
      {% if currentPath == path('apropos') %}color: #096007;{% endif %}" href="{{path("apropos")}}">À porpos de Nous </a>
    </li>
    <li class="nav-item">
      <a class="nav-link font-weight-bold text-uppercase navbar-text px-4
      {% if currentPath == path('offre') %}active-link{% endif %}" style="font-family:Montserrat,Arial,Helvetica,sans-serif;
      {% if currentPath == path('offre') %}color: #096007;{% endif %}" href="{{path("offre")}}">Offres </a>
    </li>
  </ul>
</nav>

<nav class="navbar navbar-expand-md navbar-light bg-light shadow-lg" style="opacity:0;">
  <a class="navbar-brand" href="{{path("index")}}">
    <img src="{{asset('img/logo-maitreartisan.png')}}" width="75" height="50" alt="">
  </a>
</nav>

<!-- END BLOCK : navbar -->
{% block body %}{% endblock %}

<!-- BLOCK : footer -->
